{% extends "base.jinja2" %}

{% block body %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>uploaded on</th>
            <th>s</th>
            <th>m</th>
            <th>l</th>
        </tr>
    </thead>

    <tbody>
        {% for entry in media %}
        <tr>
            <td>{{entry.id}}</td>
            <td>{{entry.name}}</td>
            <td>{{entry.uploaded_on}}</td>
            <td>{{entry.thumbnail("s")}}</td>
            <td>{{entry.thumbnail("m")}}</td>
            <td>{{entry.thumbnail("l")}}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4" style="text-align:center">No jobs</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}