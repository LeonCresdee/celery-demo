{% extends "base.jinja2" %}

{% block body %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>status</th>
            <th>started</th>
            <th>last modified</th>
        </tr>
    </thead>

    <tbody>
        {% for entry in jobs %}
        <tr>
            <td>{{entry.id}}</td>
            <td>{{entry.status}}</td>
            <td>{{entry.created_on}}</td>
            <td>{{entry.changed_on}}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4" style="text-align:center">No jobs</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}